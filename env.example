# Railway Environment Variables for AMS Production

# Database Configuration
DB_HOST=localhost
DB_NAME=AMS
DB_USER=ams_user
DB_PASSWORD=your_secure_password
DB_PORT=3306
DB_ROOT_PASSWORD=your_root_password

# JWT Configuration
JWT_SECRET_KEY=your_very_long_secret_key_here_make_it_at_least_32_characters
# Note: Railway will provide a free subdomain like: https://29asset.railway.app
# You can leave these empty and Railway will use the default subdomain
# Or set to your preferred subdomain:
JWT_ISSUER=https://29asset.railway.app
JWT_AUDIENCE=https://29asset.railway.app

# Admin Configuration
ADMIN_PASSWORD=your-strong-admin-password

# Application Configuration
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:80;https://+:443

# Email Configuration (Gmail)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=your_email@gmail.com

# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Optional: Custom Domain
CUSTOM_DOMAIN=your-domain.com
SSL_CERTIFICATE_PATH=/path/to/certificate
SSL_PRIVATE_KEY_PATH=/path/to/private/key

# Security Configuration
ENABLE_HTTPS_REDIRECTION=true
ENABLE_SECURITY_HEADERS=true 