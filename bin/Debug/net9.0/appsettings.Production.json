{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning",
      "Microsoft.EntityFrameworkCore.Infrastructure": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=${DB_HOST};Database=${DB_NAME};User=${DB_USER};Password=${DB_PASSWORD};Port=${DB_PORT};CharSet=utf8mb4;"
  },
  "IdentityDefaultOptions": {
    "PasswordRequireDigit": true,
    "PasswordRequiredLength": 12,
    "PasswordRequireNonAlphanumeric": true,
    "PasswordRequireUppercase": true,
    "PasswordRequireLowercase": true,
    "PasswordRequiredUniqueChars": 4,
    "LockoutDefaultLockoutTimeSpanInMinutes": 60,
    "LockoutMaxFailedAccessAttempts": 3,
    "LockoutAllowedForNewUsers": true,
    "UserRequireUniqueEmail": true,
    "SignInRequireConfirmedEmail": false,
    "CookieHttpOnly": true,
    "CookieExpiration": 30,
    "ExpireTimeSpan": 30,
    "LoginPath": "/Account/Login",
    "LogoutPath": "/Account/Logout",
    "AccessDeniedPath": "/Account/AccessDenied",
    "SlidingExpiration": true
  },
  "SuperAdminDefaultOptions": {
    "Email": "admin@yourcompany.com",
    "Password": "${ADMIN_PASSWORD}"
  },
  "JWT": {
    "ValidAudience": "${JWT_AUDIENCE:-https://29asset.railway.app}",
    "ValidIssuer": "${JWT_ISSUER:-https://29asset.railway.app}",
    "Secret": "${JWT_SECRET}"
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      },
      "Https": {
        "Url": "https://0.0.0.0:5001"
      }
    }
  },
  "ForwardedHeaders": {
    "ForwardedHeaders": "XForwardedFor,XForwardedProto"
  },
  "HttpsRedirection": {
    "RedirectStatusCode": 307,
    "HttpsPort": 5001
  }
} 