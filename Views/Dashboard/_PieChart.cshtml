@model AMS.Models.DashboardViewModel.PieChartViewModel

<div class="meta-chart-section">
    <div class="chart-header">
        <h3>Asset Distribution</h3>
        <p>Visual breakdown of asset categories and status</p>
    </div>

    <div class="chart-content">
        <div class="chart-canvas">
            <canvas id="assetPieChart"></canvas>
        </div>
        
        <div class="chart-legend-meta">
            <h4>Categories</h4>
            <div id="chartLegend" class="legend-items-meta">
                <!-- Dynamic legend items will be loaded here -->
            </div>
        </div>
    </div>
</div>

<style>
/* Meta-Inspired Clean Chart Section */
.meta-chart-section {
    background: white;
    border-radius: 8px;
    padding: 24px;
    border: 1px solid #e4e6eb;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.04);
}

.chart-header {
    margin-bottom: 24px;
}

.chart-header h3 {
    font-size: 18px;
    font-weight: 700;
    color: #1c1e21;
    margin: 0 0 4px 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.chart-header p {
    font-size: 14px;
    color: #65676b;
    margin: 0;
}

.chart-content {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 24px;
    align-items: center;
}

.chart-canvas {
    position: relative;
    height: 350px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.chart-canvas canvas {
    max-width: 100%;
    max-height: 100%;
}

.chart-legend-meta {
    background: #f7f8fa;
    border-radius: 8px;
    padding: 16px;
    border: 1px solid #e4e6eb;
}

.chart-legend-meta h4 {
    font-size: 14px;
    font-weight: 600;
    color: #1c1e21;
    margin: 0 0 12px 0;
    padding-bottom: 12px;
    border-bottom: 1px solid #e4e6eb;
}

.legend-items-meta {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.legend-item-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 8px;
    background: white;
    border-radius: 6px;
    border: 1px solid #e4e6eb;
    transition: all 0.2s ease;
}

.legend-item-meta:hover {
    border-color: #0866FF;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
}

.legend-color {
    display: flex;
    align-items: center;
    gap: 8px;
}

.legend-dot {
    width: 12px;
    height: 12px;
    border-radius: 3px;
    flex-shrink: 0;
}

.legend-label {
    font-size: 13px;
    color: #1c1e21;
    font-weight: 500;
}

.legend-value {
    font-size: 14px;
    font-weight: 600;
    color: #1c1e21;
}

@@media (max-width: 968px) {
    .chart-content {
        grid-template-columns: 1fr;
    }
    
    .chart-canvas {
        height: 300px;
    }
}

@@media (max-width: 576px) {
    .chart-canvas {
        height: 250px;
    }
}
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Sample data - replace with actual data from your model
    const ctx = document.getElementById('assetPieChart');
    if (ctx) {
        const chart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Unallocated Assets', 'New', 'Available', 'Expired', 'Damage'],
                datasets: [{
                    data: [11, 5, 4, 1, 1],
                    backgroundColor: [
                        '#f7b928',
                        '#0866FF',
                        '#31a24c',
                        '#8b5cf6',
                        '#e41e3f'
                    ],
                    borderWidth: 2,
                    borderColor: '#ffffff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: '#1c1e21',
                        titleColor: '#ffffff',
                        bodyColor: '#ffffff',
                        padding: 12,
                        cornerRadius: 6,
                        titleFont: {
                            size: 14,
                            weight: 600
                        },
                        bodyFont: {
                            size: 13
                        }
                    }
                },
                cutout: '65%'
            }
        });

        // Generate legend
        const legendContainer = document.getElementById('chartLegend');
        if (legendContainer && chart.data.labels) {
            legendContainer.innerHTML = '';
            chart.data.labels.forEach((label, index) => {
                const value = chart.data.datasets[0].data[index];
                const color = chart.data.datasets[0].backgroundColor[index];
                
                const legendItem = document.createElement('div');
                legendItem.className = 'legend-item-meta';
                legendItem.innerHTML = `
                    <div class="legend-color">
                        <div class="legend-dot" style="background-color: ${color}"></div>
                        <span class="legend-label">${label}</span>
                    </div>
                    <span class="legend-value">${value}</span>
                `;
                legendContainer.appendChild(legendItem);
            });
        }
    }
});
</script>
