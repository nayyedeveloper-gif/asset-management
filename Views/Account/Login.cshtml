@model AMS.Models.AccountViewModels.LoginViewModel

@{
    ViewData["Title"] = "Log in";
}

<div class="meta-login-container">
    <div class="login-split-layout">
        <!-- Left Side - Branding -->
        <div class="login-brand-section">
            <div class="brand-content">
                <div class="brand-logo-wrapper">
                    <div class="brand-logo">
                        <img src="~/images/29logo.png" alt="29 Logo" class="login-logo-img" />
                    </div>
                    <h1 class="brand-name">29 Asset Management</h1>
                </div>
                <p class="brand-tagline">Streamline your asset tracking and management with our professional-grade platform</p>
                <div class="brand-features">
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Real-time asset tracking</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Comprehensive reporting</span>
                    </div>
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <span>Secure and reliable</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="login-form-section">
            <div class="form-container">
                <div class="form-header">
                    <h2 class="form-title">Log in to 29 Asset</h2>
                    <p class="form-subtitle">Enter your details below</p>
                </div>

                <form id="frmLogin" class="meta-form">
                    <input type="hidden" asp-for="Latitude" id="Longitude" />
                    <input type="hidden" asp-for="Latitude" id="Latitude" />
                    
                    <div class="form-group">
                        <label class="form-label">Email address</label>
                        <input class="form-control meta-input" asp-for="Email" id="Email" type="email" 
                               name="email" autofocus placeholder="Email address">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Password</label>
                        <input class="form-control meta-input" asp-for="Password" id="Password" 
                               type="password" name="password" required placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-options">
                        <label class="checkbox-label">
                            <input id="checkbox-signup" type="checkbox" name="remember">
                            <span class="checkbox-text">Keep me logged in</span>
                        </label>
                        <a asp-action="ForgotPassword" class="forgot-link">Forgot password?</a>
                    </div>
                    
                    <button type="button" id="btnUserLogin" class="meta-btn" onclick="LoginAction()">
                        Log in
                    </button>
                    
                    <div class="divider">
                        <span>or</span>
                    </div>
                    
                    <div class="form-footer">
                        <p class="signup-text">
                            Don't have an account? 
                            <a asp-action="Register" class="signup-link">Sign up</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/LoginOperation.js"></script>
<script src="~/js/UserInfoFromBrowser/UserInfoFromBrowser_CRUD.js"></script>

@section Scripts{
@await Html.PartialAsync("_ValidationScriptsPartial")
<script>
    $(document).ready(function () {
        // Add floating animation
        $('.floating-gem').each(function(index) {
            $(this).css({
                'animation-delay': (index * 0.5) + 's'
            });
        });
    });
</script>
}

<style>
/* Meta-Inspired Login Container */
.meta-login-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f0f2f5;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    padding: 20px;
}

.login-split-layout {
    display: flex;
    max-width: 1200px;
    width: 100%;
    background: white;
    border-radius: 12px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    min-height: 600px;
}

/* Left Side - Brand Section */
.login-brand-section {
    flex: 1;
    background: linear-gradient(135deg, #0866FF 0%, #0552CC 100%);
    padding: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.brand-content {
    max-width: 400px;
}

.brand-logo-wrapper {
    margin-bottom: 32px;
}

.brand-logo {
    margin-bottom: 20px;
}

.login-logo-img {
    width: 120px;
    height: auto;
    display: block;
    margin: 0 auto;
}

.brand-name {
    font-size: 32px;
    font-weight: 700;
    color: white;
    margin: 0;
    line-height: 1.2;
}

.brand-tagline {
    font-size: 16px;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.9);
    margin: 24px 0 40px 0;
}

.brand-features {
    display: flex;
    flex-direction: column;
    gap: 16px;
}

.feature-item {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 15px;
    color: rgba(255, 255, 255, 0.95);
}

.feature-item i {
    color: #4CAF50;
    font-size: 18px;
}

/* Right Side - Form Section */
.login-form-section {
    flex: 1;
    padding: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.form-container {
    width: 100%;
    max-width: 400px;
}

.form-header {
    margin-bottom: 32px;
}

.form-title {
    font-size: 28px;
    font-weight: 700;
    color: #1c1e21;
    margin: 0 0 8px 0;
}

.form-subtitle {
    font-size: 15px;
    color: #606770;
    margin: 0;
}

/* Form Styles */
.meta-form .form-group {
    margin-bottom: 16px;
}

.form-label {
    display: block;
    font-size: 14px;
    font-weight: 500;
    color: #1c1e21;
    margin-bottom: 6px;
}

.meta-input {
    width: 100%;
    padding: 14px 16px;
    border: 1px solid #dddfe2;
    border-radius: 6px;
    font-size: 15px;
    background: #f5f6f7;
    transition: all 0.2s ease;
    color: #1c1e21;
}

.meta-input:focus {
    outline: none;
    background: white;
    border-color: #0866FF;
    box-shadow: 0 0 0 2px rgba(8, 102, 255, 0.1);
}

.meta-input::placeholder {
    color: #8a8d91;
}

.form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 16px 0 24px 0;
    font-size: 14px;
}

.checkbox-label {
    display: flex;
    align-items: center;
    cursor: pointer;
    user-select: none;
}

.checkbox-label input[type="checkbox"] {
    width: 18px;
    height: 18px;
    margin-right: 8px;
    cursor: pointer;
    accent-color: #0866FF;
}

.checkbox-text {
    color: #1c1e21;
    font-size: 14px;
}

.forgot-link {
    color: #0866FF;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
}

.forgot-link:hover {
    text-decoration: underline;
}

/* Meta Button */
.meta-btn {
    width: 100%;
    padding: 14px 16px;
    background: #0866FF;
    border: none;
    border-radius: 6px;
    color: white;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
}

.meta-btn:hover {
    background: #0552CC;
}

.meta-btn:active {
    transform: scale(0.98);
}

.divider {
    display: flex;
    align-items: center;
    margin: 24px 0;
    color: #8a8d91;
    font-size: 14px;
}

.divider::before,
.divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: #dddfe2;
}

.divider span {
    padding: 0 16px;
}

.form-footer {
    text-align: center;
}

.signup-text {
    font-size: 14px;
    color: #1c1e21;
    margin: 0;
}

.signup-link {
    color: #0866FF;
    text-decoration: none;
    font-weight: 600;
}

.signup-link:hover {
    text-decoration: underline;
}

/* Responsive Design */
@@media (max-width: 968px) {
    .login-split-layout {
        flex-direction: column;
    }
    
    .login-brand-section {
        padding: 40px 30px;
    }
    
    .login-form-section {
        padding: 40px 30px;
    }
    
    .brand-name {
        font-size: 28px;
    }
    
    .form-title {
        font-size: 24px;
    }
}

@@media (max-width: 576px) {
    .meta-login-container {
        padding: 10px;
    }
    
    .login-brand-section,
    .login-form-section {
        padding: 30px 20px;
    }
    
    .form-options {
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
    }
}

/* Remove old styles */
.login-background {
    display: none;
}
</style>