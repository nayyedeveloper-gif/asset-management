@model AMS.Models.DashboardViewModel.SharedUIDataViewModel

<aside class="main-sidebar sidebar-light-primary elevation-1 meta-sidebar">
    <a href="@Url.Action("Index", "Dashboard")" class="brand-link meta-brand">
        <div class="brand-logo-container">
            <img src="~/images/29logo.png" alt="29 Logo" class="brand-logo-img" />
        </div>
        <div class="brand-text-container">
            <span class="brand-text-main">29 Asset</span>
            <span class="brand-text-sub">Management System</span>
        </div>
    </a>

    <style>
    .meta-sidebar {
        background: #ffffff !important;
        border-right: 1px solid #e4e6eb !important;
    }
    
    .meta-brand {
        background: #ffffff;
        border-bottom: 1px solid #e4e6eb;
        padding: 16px 20px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 12px;
        transition: all 0.2s ease;
    }
    
    .meta-brand:hover {
        background: #f7f8fa;
    }
    
    .brand-logo-container {
        flex-shrink: 0;
    }
    
    .brand-logo-img {
        width: 50px;
        height: auto;
        display: block;
    }
    
    .brand-text-container {
        display: flex;
        flex-direction: column;
        line-height: 1.2;
    }
    
    .brand-text-main {
        font-size: 18px;
        font-weight: 700;
        color: #1c1e21;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }
    
    .brand-text-sub {
        font-size: 12px;
        font-weight: 400;
        color: #65676b;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    }
    
    /* User Panel Styles */
    .meta-sidebar .user-panel {
        border-bottom: 1px solid #e4e6eb;
        padding: 16px 20px;
        background: #ffffff !important;
    }
    
    .meta-sidebar .sidebar {
        background: #ffffff !important;
    }
    
    .meta-sidebar .user-panel .image img {
        border: 2px solid #0866FF;
    }
    
    .meta-sidebar .user-panel .info a {
        color: #1c1e21;
        font-weight: 600;
        font-size: 14px;
    }
    
    .meta-sidebar .user-panel .info a:hover {
        color: #0866FF;
    }
    
    /* Navigation Styles */
    .meta-sidebar .nav-sidebar {
        padding: 8px 0;
    }
    
    .meta-sidebar .nav-sidebar .nav-item {
        margin-bottom: 2px;
    }
    
    .meta-sidebar .nav-sidebar .nav-link {
        color: #1c1e21 !important;
        padding: 10px 20px;
        border-radius: 0;
        font-size: 14px;
        font-weight: 500;
        transition: all 0.2s ease;
        border-left: 3px solid transparent;
        background: transparent !important;
    }
    
    .meta-sidebar .nav-sidebar .nav-link p {
        color: #1c1e21 !important;
        margin: 0;
    }
    
    .meta-sidebar .nav-sidebar .nav-link:hover {
        background: #f0f2f5 !important;
        color: #0866FF !important;
        border-left-color: #0866FF;
    }
    
    .meta-sidebar .nav-sidebar .nav-link:hover p {
        color: #0866FF !important;
    }
    
    .meta-sidebar .nav-sidebar .nav-link.active {
        background: #e7f3ff !important;
        color: #0866FF !important;
        border-left-color: #0866FF;
        font-weight: 600;
    }
    
    .meta-sidebar .nav-sidebar .nav-link.active p {
        color: #0866FF !important;
    }
    
    .meta-sidebar .nav-sidebar .nav-link .nav-icon {
        color: #65676b;
        margin-right: 12px;
        font-size: 16px;
        width: 20px;
        text-align: center;
    }
    
    .meta-sidebar .nav-sidebar .nav-link:hover .nav-icon,
    .meta-sidebar .nav-sidebar .nav-link.active .nav-icon {
        color: #0866FF;
    }
    
    /* Tree View Styles */
    .meta-sidebar .nav-treeview {
        background: #f7f8fa;
        padding: 4px 0;
    }
    
    .meta-sidebar .nav-treeview .nav-link {
        padding: 8px 20px 8px 52px;
        font-size: 13px;
        font-weight: 400;
    }
    
    .meta-sidebar .nav-treeview .nav-link .nav-icon {
        font-size: 14px;
        margin-right: 10px;
    }
    
    /* Menu Open State */
    .meta-sidebar .nav-item.menu-open > .nav-link {
        background: #f0f2f5 !important;
        color: #0866FF;
    }
    
    .meta-sidebar .nav-item.menu-open > .nav-link .nav-icon {
        color: #0866FF;
    }
    
    /* Right Arrow for Treeview */
    .meta-sidebar .nav-sidebar .nav-link .right {
        color: #65676b;
    }
    
    .meta-sidebar .nav-sidebar .nav-link:hover .right,
    .meta-sidebar .nav-sidebar .nav-link.active .right {
        color: #0866FF;
    }
    
    /* Scrollbar Styling */
    .meta-sidebar .sidebar::-webkit-scrollbar {
        width: 6px;
    }
    
    .meta-sidebar .sidebar::-webkit-scrollbar-track {
        background: #f7f8fa;
    }
    
    .meta-sidebar .sidebar::-webkit-scrollbar-thumb {
        background: #ccd0d5;
        border-radius: 3px;
    }
    
    .meta-sidebar .sidebar::-webkit-scrollbar-thumb:hover {
        background: #b0b3b8;
    }
    </style>

