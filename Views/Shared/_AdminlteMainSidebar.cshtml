@model AMS.Models.DashboardViewModel.SharedUIDataViewModel

<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <a href="@Url.Action("Index", "Dashboard")" class="brand-link luxury-brand">
        <div class="brand-image-wrapper">
            <div class="luxury-logo">
                <i class="fas fa-gem"></i>
            </div>
        </div>
        <div class="brand-text-wrapper">
            <span class="brand-text-main">29 Gem & Jewellery</span>
            <span class="brand-text-subtitle">Where Excellence Meets Elegance</span>
        </div>
    </a>

    <style>
    .luxury-brand {
        background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
        border-bottom: 2px solid #f59e0b;
        padding: 20px 15px;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .luxury-brand:hover {
        background: linear-gradient(135deg, #2d2d2d 0%, #1a1a1a 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(245, 158, 11, 0.3);
    }
    
    .brand-image-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 10px;
    }
    
    .luxury-logo {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(245, 158, 11, 0.4);
        border: 2px solid #fbbf24;
    }
    
    .luxury-logo i {
        font-size: 24px;
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }
    
    .brand-text-wrapper {
        text-align: center;
    }
    
    .brand-text-main {
        display: block;
        font-size: 18px;
        font-weight: 700;
        color: #f59e0b;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
        letter-spacing: 1px;
        margin-bottom: 2px;
    }
    
    .brand-text-subtitle {
        display: block;
        font-size: 10px;
        font-weight: 300;
        color: #9ca3af;
        letter-spacing: 0.5px;
        font-style: italic;
    }
    </style>

    <div class="sidebar">
        @if (Model.MainMenuViewModel.UserProfile)
        {
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <img src="@Model.UserProfile.ProfilePicture" class="img-circle elevation-2" alt="User Image">
                </div>
                <div class="info">
                    <a href="@Url.Action("Index", "UserProfile")" class="d-block">
                        @Model.UserProfile.FirstName @Model.UserProfile.LastName
                    </a>
                </div>
            </div>
        }

        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                @if (Model.MainMenuViewModel.Asset)
                {
                    <li class="nav-item">
                        <a href="@MainMenu.Asset.Path" class="nav-link active">
                            <i class="nav-icon fas fa-box"></i>
                            <p>
