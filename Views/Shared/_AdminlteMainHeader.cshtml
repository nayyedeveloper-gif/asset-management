@model AMS.Models.AccountViewModels.LoginViewModel;

<nav class="main-header navbar navbar-expand navbar-white navbar-light meta-header">
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link meta-menu-toggle" data-widget="pushmenu" href="#" role="button">
                <i class="fas fa-bars"></i>
            </a>
        </li>
    </ul>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="meta-logout-form">
                <input type="hidden" asp-for="Longitude" id="Longitude" />
                <input type="hidden" asp-for="Latitude" id="Latitude" />
                <button type="submit" onclick="SignOutAction()" class="meta-logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Sign out</span>
                </button>
            </form>
        </li>
    </ul>
</nav>

<style>
.meta-header {
    background: #ffffff !important;
    border-bottom: 1px solid #e4e6eb !important;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.04) !important;
    padding: 0 20px !important;
    height: 60px !important;
}

.meta-menu-toggle {
    color: #1c1e21 !important;
    padding: 8px 12px !important;
    border-radius: 6px !important;
    transition: all 0.2s ease !important;
}

.meta-menu-toggle:hover {
    background: #f0f2f5 !important;
    color: #0866FF !important;
}

.meta-logout-form {
    margin: 0 !important;
    padding: 0 !important;
}

.meta-logout-btn {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: #ffffff;
    border: 1px solid #dddfe2;
    border-radius: 6px;
    color: #1c1e21;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
}

.meta-logout-btn:hover {
    background: #f0f2f5;
    border-color: #0866FF;
    color: #0866FF;
}

.meta-logout-btn i {
    font-size: 14px;
}
</style>

<script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>
<script src="~/js/LoginOperation.js"></script>

<script>
    $(document).ready(function () {
        SetGeolocation();
    });
</script>