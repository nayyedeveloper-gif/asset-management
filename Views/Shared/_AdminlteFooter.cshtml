@using Microsoft.Extensions.Options;
@inject IOptions<AMS.Models.CommonViewModel.ApplicationInfo> _ApplicationInfo;

<footer class="main-footer meta-footer">
    <div class="footer-content">
        <div class="footer-left">
            <span class="footer-text">&copy; 2024 <strong>29 Asset Management</strong>. All rights reserved.</span>
            <span class="footer-divider">•</span>
            <span class="footer-developer">Developer: <strong>Nay Ye</strong></span>
            <span class="footer-divider">•</span>
            <span class="footer-contact">Yangon, Myanmar</span>
            <span class="footer-divider">•</span>
            <span class="footer-contact">Ph: 09775630740</span>
        </div>
        
        <div class="footer-right">
            <span class="footer-version">Version 2.0.0</span>
            <span class="footer-divider">•</span>
            <span class="footer-currency">Currency: MMK (Ks)</span>
        </div>
